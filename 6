- hosts: all
  tasks:
    - name: Get current date
      ansible.builtin.set_fact:
        current_date: "{{ lookup('pipe', 'date +%Y%m%d') }}"

    - name: Extract file paths using awk
      ansible.builtin.shell: "awk '{print $1}' /var/tmp/filelist.txt"
      register: awk_output

    - name: Change permissions and log the changes
      ansible.builtin.shell: |
        chmod o-w {{ item }} && echo "{{ item }} permissions changed" >> /tmp/log_{{ current_date }}.txt
      loop: "{{ awk_output.stdout_lines }}"
